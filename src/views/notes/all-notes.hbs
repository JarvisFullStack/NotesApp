<div class="row">
    {{#each notes}}
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title d-flex justify-content-between">
                   {{title}} <a href="/notes/edit/{{_id}}"><i class="fas fa-edit"></i></a>
                </h4>
                <p>{{description}}</p>
                <button class="btn btn-danger btn-block">
                    Delete
                </button>
            </div>
        </div>
    </div>
    {{else}}
        <div class="card mx-auto">
            <div class="card-body">
                <p class="lead">Todavia no hay notas.</p>
                <a href="/notes/add" class="btn btn-success btn-block">Create Once!</a>
            </div>
        </div>
   
    {{/each}}
</div>